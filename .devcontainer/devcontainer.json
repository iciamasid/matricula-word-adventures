
{
    "name": "Capacitor Android Build Environment",
    "image": "mcr.microsoft.com/devcontainers/universal:latest",
    
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "20"
        },
        "ghcr.io/devcontainers/features/java:1": {
            "version": "17",
            "jdkDistro": "temurin",
            "installGradle": true
        }
    },
    
    "postCreateCommand": "chmod +x setup-android.sh detect-java.sh && ./detect-java.sh && ./setup-android.sh",
    
    "customizations": {
        "vscode": {
            "extensions": [
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint",
                "ms-vscode.vscode-typescript-next",
                "formulahendry.auto-rename-tag",
                "vscjava.vscode-java-pack"
            ],
            "settings": {
                "java.configuration.runtimes": [
                    {
                        "name": "JavaSE-17",
                        "path": "/usr/lib/jvm/temurin-17-jdk-amd64",
                        "default": true
                    }
                ],
                "java.home": "/usr/lib/jvm/temurin-17-jdk-amd64"
            }
        }
    }
}
