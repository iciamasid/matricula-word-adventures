// .devcontainer/devcontainer.json
    {
        "name": "Capacitor Android Build Environment",
        "image": "mcr.microsoft.com/devcontainers/universal:latest",
        
        "features": {
            "ghcr.io/devcontainers/features/node:1": {
                "version": "20"
            },
            "ghcr.io/devcontainers/features/java:1": {
                "version": "17"
            }
        },
        
        // Comandos que se ejecutarán automáticamente al crear el Codespace
        "postCreateCommand": "bash -c \" \
            npm install && \
            npm run build && \
            export ANDROID_SDK_ROOT=/usr/local/lib/android/sdk && \
            mkdir -p $ANDROID_SDK_ROOT && \
            export PATH=$PATH:$ANDROID_SDK_ROOT/cmdline-tools/latest/bin && \
            yes | sdkmanager --install 'platforms;android-34' 'build-tools;34.0.0' 'cmdline-tools;latest' 'patcher;v4' && \
            npx cap add android && \
            npx cap sync android && \
            cd android && \
            chmod +x gradlew && \
            echo 'sdk.dir=/usr/local/lib/android/sdk' > local.properties && \
            ./gradlew clean \
        \"",
        
        // Extensiones de VS Code útiles para el desarrollo web/móvil
        "customizations": {
            "vscode": {
                "extensions": [
                    "esbenp.prettier-vscode",
                    "dbaeumer.vscode-eslint",
                    "ms-vscode.vscode-typescript-next",
                    "formulahendry.auto-rename-tag"
                ]
            }
        }
    }
    